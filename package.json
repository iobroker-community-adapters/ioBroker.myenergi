    "@iobroker/adapter-dev": "^1.3.0",
    "@iobroker/testing": "^4.1.0",
    "@tsconfig/node14": "^1.0.3",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.8",
    "@types/json-bigint": "^1.0.4",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.24",
